{
  "name": "digia-react",
  "author": "thanhbinh.tran93@gmail.com",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@emotion/core": "^10.0.28",
    "@emotion/styled": "^10.0.27",
    "@testing-library/jest-dom": "^5.7.0",
    "@testing-library/react": "^10.0.4",
    "@testing-library/user-event": "^10.1.2",
    "@types/jest": "^24.9.1",
    "@types/node": "^12.12.38",
    "@types/react": "^16.9.34",
    "@types/react-dom": "^16.9.7",
    "@types/yup": "^0.28.1",
    "formik": "^2.1.4",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.2",
    "prettier": "^2.0.5",
    "random-mobile": "^1.0.2",
    "random-name": "^0.1.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-helmet": "^6.0.0",
    "react-scripts": "3.4.1",
    "typescript": "^3.8.3",
    "uuid": "^8.0.0",
    "yup": "^0.28.5"
  },
  "devDependencies": {
    "@types/react-helmet": "^5.0.15",
    "@types/uuid": "^7.0.3",
    "eslint-plugin-emotion": "^10.0.27",
    "jest-environment-jsdom-sixteen": "^1.0.3"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jest-environment-jsdom-sixteen",
    "eject": "react-scripts eject",
    "lint": "eslint ./src --ext .js,.jsx,.ts,.tsx",
    "format": "prettier --write \"**/*.+(js|jsx|json|yml|yaml|css|less|scss|ts|tsx|graphql|md|mdx)\""
  },
  "eslintConfig": {
    "extends": "react-app",
    "plugins": [
      "emotion"
    ],
    "rules": {
      "emotion/jsx-import": "error",
      "emotion/no-vanilla": "error",
      "emotion/import-from-emotion": "error",
      "emotion/styled-import": "error"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint"
    ],
    "src/**/*.{js|jsx|json|yml|yaml|css|less|scss|ts|tsx|md|graphql|mdx}": [
      "prettier --write"
    ]
  }
}
